<?xml version="1.0"?>
<!--
Sample Actions xml file.

# Mask Names #
Acceptable names for masks are "alt", "command", "ctrl", "menu", and
"shift".
"menu" means Command on Mac and Control on other platforms.

# Key Names #
Key names must be as given by Swing, without the
  initial "VK_". Full list here:
http://download.oracle.com/javase/6/docs/api/java/awt/event/KeyEvent.html
-->
<actions>

  <!-- Actions with keyboard shortcuts -->
  <action class="actions.DoneAction"
          name="Mark Complete"
          tooltip="Mark Annotation File Complete">
    <shortcut>
      <mask keyname="menu" />
      <mask keyname="shift" />
      <key keyname="D" />
    </shortcut>
  </action>

  <action class="actions.OpenAudioFileAction"
          name="Add Audio Files..."
          tooltip="Select File or Folder"
          os="Linux,Windows"
          >
    <shortcut>
      <mask keyname="menu" />
      <key keyname="O" />
    </shortcut>
  </action>

  <action class="actions.OpenAudioFileAction"
          name="Open Audio File..."
          os="Mac OS X"
          >
    <shortcut>
      <mask keyname="menu" />
      <key keyname="O" />
    </shortcut>
  </action>

  <action class="actions.OpenAudioFolderAction"
          name="Open Audio Folder..."
          os="Mac OS X"
          >
    <shortcut>
      <mask keyname="menu" />
      <mask keyname="alt" />
      <key keyname="O" />
    </shortcut>
  </action>

  <action class="actions.OpenWordpoolAction"
          name="Select Wordpool..."
          tooltip="Select Text File Containing Words in Audio File"
          >
    <shortcut>
      <mask keyname="menu" />
      <mask keyname="shift" />
      <key keyname="O" />
    </shortcut>
  </action>

  <action class="actions.PlayPauseAction"
          name="Play/Pause">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="P" />
    </shortcut>
  </action>
  <action class="actions.ReplayLast200MillisAction"
          name="Replay Last 200 ms">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="Z" />
    </shortcut>
  </action>
  <action class="actions.StopAction"
          name="Go to Start">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="S" />
    </shortcut>
  </action>
  <action class="actions.ReturnToLastPositionAction"
          name="Undo Play"
          tooltip="Return to the position prior to hitting play">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="L" />
    </shortcut>
  </action>
  <action class="actions.ReplayLastPositionAction"
          name="Replay">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="R" />
    </shortcut>
  </action>

  <action class="actions.SeekAction"
          name="Forward Small Amount">
    <arg>forward-small</arg>
    <shortcut>
      <key keyname="RIGHT" />
    </shortcut>
  </action>

  <action class="actions.SeekAction"
          name="Backward Small Amount">
    <arg>backward-small</arg>
    <shortcut>
      <key keyname="LEFT" />
    </shortcut>
  </action>

  <action class="actions.SeekAction"
          name="Forward Medium Amount">
    <arg>forward-medium</arg>
    <shortcut>
      <mask keyname="menu" />
      <key keyname="RIGHT" />
    </shortcut>
  </action>

  <action class="actions.SeekAction"
          name="Backward Medium Amount">
    <arg>backward-medium</arg>
    <shortcut>
      <mask keyname="menu" />
      <key keyname="LEFT" />
    </shortcut>
  </action>

  <action class="actions.SeekAction"
          name="Forward Large Amount">
    <arg>forward-large</arg>
    <shortcut>
      <mask keyname="menu" />
      <mask keyname="shift" />
      <key keyname="RIGHT" />
    </shortcut>
  </action>

  <action class="actions.ExitAction"
          name="Exit"
          os="Windows,Linux"
          >
    <shortcut>
      <mask keyname="menu" />
      <key keyname="X" />
    </shortcut>
  </action>

  <action class="actions.SeekAction"
          name="Backward Large Amount">
    <arg>backward-large</arg>
    <shortcut>
      <mask keyname="menu" />
      <mask keyname="shift" />
      <key keyname="LEFT" />
    </shortcut>
  </action>

  <action class="actions.ToggleAnnotationsAction"
          name="Toggle Next Annotation">
    <arg>forward</arg>
    <shortcut>
      <mask keyname="shift" />
      <key keyname="RIGHT" />
    </shortcut>
  </action>

  <action class="actions.ToggleAnnotationsAction"
          name="Toggle Previous Annotation">
    <arg>backward</arg>
    <shortcut>
      <mask keyname="shift" />
      <key keyname="LEFT" />
    </shortcut>
  </action>

  <action class="actions.Last200PlusMoveAction"
          name="Backward Small Amount then Replay Last 200 ms">
    <arg>backward</arg>
    <shortcut>
      <mask keyname="alt" />
      <key keyname="LEFT" />
    </shortcut>
  </action>

  <action class="actions.Last200PlusMoveAction"
          name="Forward Small Amount then Replay Last 200 ms">
    <arg>forward</arg>
    <shortcut>
      <key keyname="alt" />
      <key keyname="RIGHT" />
    </shortcut>
  </action>

  <action class="actions.DeleteSelectedAnnotationAction"
          name="Delete Selected Annotation on Waveform">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="DELETE" />
    </shortcut>
  </action>

  <action class="actions.AnnotateAction"
          name="Commit Annotation as Intrusion"
          >
    <arg>intrusion</arg>
    <shortcut>
      <mask keyname="menu" />
      <mask keyname="shift" />
      <key keyname="ENTER" />
    </shortcut>
  </action>

  <!-- Actions without keyboard shortcuts -->
  <action class="actions.PreferencesAction"
          name="Preferences..." />

  <action class="actions.AboutAction"
          name="About"
          os="Windows,Linux"
          />

  <action class="actions.CheckUpdatesAction"
          name="Check For Updates" />

  <action class="actions.VisitTutorialSiteAction"
          name="Program Homapage" />

  <action class="actions.EditShortcutsAction"
          name="Edit Keyboard Shortcuts..." />

  <action class="behaviors.singleact.TipsMessageAction"
          name="View Program Tips..." />
</actions>
